<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.prashant.youtubeplay" >
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"

        android:theme="@style/AppTheme" >
        <activity
            android:name="io.vov.vitamio.activity.InitActivity"
            android:configChanges="orientation|screenSize|smallestScreenSize|keyboard|keyboardHidden|navigation"
            android:launchMode="singleTop"
            android:theme="@android:style/Theme.NoTitleBar"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name="com.example.prashant.youtubeplay.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.prashant.youtubeplay.CurrentPlayList"
            android:label="@string/title_activity_current_play_list" >
        </activity>

        <activity
            android:name="com.example.prashant.youtubeplay.SavedPlayList"
            android:label="@string/title_activity_saved_play_list" >
        </activity>
        <activity
            android:name="com.example.prashant.youtubeplay.History"
            android:label="@string/title_activity_history" >
        </activity>
        <activity
            android:name="com.example.prashant.youtubeplay.SearchResult"
            android:label="@string/title_activity_search_result" >
        </activity>
    </application>

</manifest>
